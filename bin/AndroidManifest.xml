<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.softiv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Barra_cargado"
            android:label="Barra Cargado" >
            <intent-filter>
                <action android:name="android.intent.action.Barra_cargado" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu_principal"
            android:label="menu_principal" >
            <intent-filter>
                <action android:name="android.intent.action.Menu_principal" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Categoria"
            android:label="@string/title_activity_categoria" >
            <intent-filter>
                <action android:name="android.intent.action.Categoria" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Productos"
            android:label="@string/title_activity_productos" >
            
            <intent-filter>
                <action android:name="android.intent.action.Productos" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registro_usuarios"
            android:label="@string/title_activity_registro_usuarios" >
            
            <intent-filter>
                <action android:name="android.intent.action.Registro_usuarios" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListadoProductos"
            android:label="@string/title_activity_listado_productos" >
        </activity>
    </application>

</manifest>
